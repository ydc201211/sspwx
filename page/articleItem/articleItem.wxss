/* page/articleItem/articleItem.wxss */
.item-left{
  float: left;
  width: 240rpx;
  height: 160rpx;
  box-sizing: border-box;
}
.item-img{
  width: 240rpx;
  height: 160rpx;
}
.item-right{
  float: left;
  width: 62%;
  height: 160rpx;
  margin-left: 30rpx;
}

.item-title{
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
  display: box;
  font-size: 28rpx;
  font-family: '微软雅黑';
  display: -webkit-box;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-time{
  font-size: 24rpx;
  color: #999;
  float: left; 
  line-height: 30rpx;
  margin-left: 16rpx;
}
.item-box{
  /* z-index: 100;
  position: absolute;
  bottom:0;
  left: 1; */
}

.icon-time{
  float: left;
  width: 28rpx;
  height: 28rpx;
}
.item-container{
  width: 100%;
  height: 220rpx;
  padding: 28rpx 16rpx;
  box-sizing: border-box;
  
}
.dash-line{
  margin: 0 20rpx;
  border-bottom: 1px dashed #eee;
}
