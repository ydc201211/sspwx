/* page/index/index.wxss */
@import "../common/lib/weui.wxss";
@import "../articleItem/articleItem.wxss";
@import "../common/loadmore/loadmore.wxss";
@import "../common/navContentType/navContentType.wxss";
.slide-image{
  width: 100%;
  height: 100%;
}
.body{
  margin-top: 20rpx;
}
.nav-btn{
  position: fixed;
  width: 95rpx;
  height: 95rpx;
  border-radius: 95rpx;
  background: #1296db;
  bottom: 40rpx;
  right: 50rpx;
  color: #fff;
  line-height: 88rpx;
  font-size: 26rpx;
  text-align: center;
  font-family: "微软雅黑";
  letter-spacing: 3rpx;
  padding: 0;
  box-shadow: 2px 2px 2px #cdcdcd; 
}

.slider-box{
  width: 430rpx;
  position: fixed;
  left: -430rpx;
  height: 100%;
  top:1px;
  z-index: 1;
  background: #fff;
  transition: left 0.6s ease-in-out 0.3s;
  -webkit-transition: left 0.6s ease-in-out 0.3s;
  -moz-transition: left 0.6s ease-in-out 0.3s;
}

.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease-in-out;
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition: all 0.3s ease-in-out;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.slider-show{
  left: 0rpx;
}
.slider-hide{
  left: -430rpx;
}
.slider-nav{
  width: inherit;
  height: 100%;
  background: #fff;
}
.slider-nav-head{
  background: #1296db;
  width: 100%;
  height: 180rpx;
}

.logo{
  margin: 6rpx;
  width: 66rpx;
  height: 66rpx;
  border-radius: 66rpx;
}
.logo-box{  
  text-align: center;
}
.text-mess{
  text-align: center;
}
.nav-head-title{
  font-size:26rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  color: #fff;
}
.nav-head-brief{
  line-height: 20px;
  font-size:24rpx;
  color: #fff;
}

.slider-nav-search{
  height: 90rpx;
  border-bottom: 1px dashed #cdcdcd;
  vertical-align: middle;
  padding: 16rpx 10rpx;
  box-sizing: border-box;
}

.search-input{
  float: left;
  height: 60rpx;
  width: 230rpx;
  background: #eee;
  margin: 0 12rpx;
  padding: 0 10rpx;
  font-size: 26rpx;
  
}
.search-btn{
  width: 120rpx;
  height: 60rpx;
  margin: 0;
  font-size: 24rpx;
  border: 1px solid #1296db;
  background: none;
  color: #1296db;
}
.nav-list-box{
  padding: 15rpx 10rpx;
  background: #1296db;
  height: 76rpx;
  box-sizing: border-box;
}
.nav-title{
  color: #fff;
  font-size: 30rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  float: left;
}
.icon_nav{
  padding: 10rpx;
  float: left;
  width: 48rpx;
  height: 48rpx;
  box-sizing: border-box;

}

