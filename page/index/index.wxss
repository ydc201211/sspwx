/* page/index/index.wxss */
@import "../common/lib/weui.wxss";
@import "../articleItem/articleItem.wxss";
@import "../common/loadmore/loadmore.wxss";
@import "../common/sliderNav/sliderNav.wxss";
.slide-image{
  width: 100%;
  height: 100%;
}
.body{
  margin-top: 20rpx;
}
.nav-btn{
  position: fixed;
  width: 95rpx;
  height: 95rpx;
  border-radius: 95rpx;
  background: #1296db;
  bottom: 40rpx;
  right: 50rpx;
  color: #fff;
  line-height: 88rpx;
  font-size: 26rpx;
  text-align: center;
  font-family: "微软雅黑";
  letter-spacing: 3rpx;
  padding: 0;
  box-shadow: 2px 2px 2px #cdcdcd; 
}

.slider-box{
  width: 430rpx;
  position: fixed;
  left: -430rpx;
  height: 100%;
  top:1px;
  z-index: 1;
  background: #fff;
  transition: left 0.6s ease-in-out 0.3s;
  -webkit-transition: left 0.6s ease-in-out 0.3s;
  -moz-transition: left 0.6s ease-in-out 0.3s;
}

.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease-in-out;
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition: all 0.3s ease-in-out;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.slider-show{
  left: 0rpx;
}
.slider-hide{
  left: -430rpx;
}

